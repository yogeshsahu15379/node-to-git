function mobileapp_zymphonies_theme_form_system_theme_settings_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state) {

  $form['mobileapp_zymphonies_theme_info'] = array(
    '#markup' => '<h2><br/>Advanced Theme Settings</h2><div class="messages messages--warning">Clear cache after making any changes in theme settings. <a href="../../config/development/performance">Click here to clear cache</a></div>'
  );

  //Slide show configure 
  
  for ($i = 1; $i <= theme_get_setting('no_of_slides'); $i++) {
    $form['mobileapp_zymphonies_theme_settings']['slideshow'] = array(
      '#type' => 'details',
      '#title' => t('HERO BANNER'),
      '#collapsible' => TRUE,
      '#collapsed' => TRUE,
    );
    $form['mobileapp_zymphonies_theme_settings']['slideshow']['slide_image_path' . $i] = array(
      '#type' => 'managed_file',
      '#title' => t('Hero banner image'),
      '#default_value' => theme_get_setting('slide_image_path'.$i,'mobileapp_zymphonies_theme'),
      '#upload_location' => 'public://',
    );
    $form['mobileapp_zymphonies_theme_settings']['slideshow']['slide_title_' . $i] = array(
      '#type' => 'textfield',
      '#title' => t('Hero banner title'),
      '#default_value' => theme_get_setting('slide_title_' . $i,'mobileapp_zymphonies_theme'),
    );
    $form['mobileapp_zymphonies_theme_settings']['slideshow']['slide_description_' . $i] = array(
      '#type' => 'textarea',
