      '#default_value' => theme_get_setting('slide_description_' . $i,'mobileapp_zymphonies_theme'),
    );    
    $form['mobileapp_zymphonies_theme_settings']['slideshow']['slide_url_android_' . $i] = array(
      '#type' => 'textfield',
      '#title' => t('Android link'),
      '#default_value' => theme_get_setting('slide_url_android_' . $i,'mobileapp_zymphonies_theme'),
    );
    $form['mobileapp_zymphonies_theme_settings']['slideshow']['slide_url_ios_' . $i] = array(
      '#type' => 'textfield',
      '#title' => t('iOS link'),
      '#default_value' => theme_get_setting('slide_url_ios_' . $i,'mobileapp_zymphonies_theme'),
    );
    $form['mobileapp_zymphonies_theme_settings']['slideshow']['slide_url_windows_' . $i] = array(
      '#type' => 'textfield',
      '#title' => t('Windows link'),
      '#default_value' => theme_get_setting('slide_url_windows_' . $i,'mobileapp_zymphonies_theme'),
